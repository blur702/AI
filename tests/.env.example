# Playwright Test Environment Configuration
# Copy this file to .env and configure for your environment

# Environment identifier: 'local' or 'vps'
TEST_ENVIRONMENT=local

# Base URL for the dashboard
# Local: http://localhost (single-port deployment)
# VPS: https://ssdd.kevinalthaus.com (HTTPS via nginx)
BASE_URL=http://localhost
DASHBOARD_API_URL=http://localhost

# API Gateway URL
GATEWAY_API_URL=http://localhost:1301

# Individual service URLs
OLLAMA_URL=http://localhost:11434
COMFYUI_URL=http://localhost:8188
OPEN_WEBUI_URL=http://localhost:3000
WEAVIATE_URL=http://localhost:8080
ALLTALK_URL=http://localhost:7851
WAN2GP_URL=http://localhost:7860
YUE_URL=http://localhost:7870
DIFFRHYTHM_URL=http://localhost:7871
MUSICGEN_URL=http://localhost:7872
STABLE_AUDIO_URL=http://localhost:7873
N8N_URL=http://localhost:5678

# Dashboard authentication (optional)
# DASHBOARD_AUTH_USERNAME=
# DASHBOARD_AUTH_PASSWORD=

# Test configuration
TEST_TIMEOUT=60000
HEADLESS=true
WORKERS=4
RETRIES=0

# SSL/TLS configuration
# Set to 'true' to allow connections to servers with self-signed certificates
# WARNING: Only enable in test environments with trusted self-signed certs
ALLOW_INSECURE_CONNECTIONS=false

# Test data directories
TEST_DATA_DIR=tests/test-data
SCREENSHOT_DIR=tests/screenshots
REPORT_DIR=tests/reports

# CI configuration (auto-detected in CI environments)
# CI=true

# Embedding models to preserve during VRAM cleanup (comma-separated)
# These models will NOT be unloaded during test orchestration
PRESERVE_EMBEDDING_MODELS=nomic-embed-text,mxbai-embed-large

# GPU-intensive services (comma-separated)
# Matches GPU_INTENSIVE_SERVICES from services_config.py
GPU_INTENSIVE_SERVICES=comfyui,stable_audio,wan2gp,yue,diffrhythm,audiocraft

# Service orchestration settings
SERVICE_START_TIMEOUT=60000
SERVICE_HEALTH_INTERVAL=5000
MAX_SERVICE_RETRIES=3

# VPS Deployment Settings (used by deploy scripts)
# VPS_HOST=ssdd.kevinalthaus.com
# VPS_USER=root
# SSH_KEY_PATH=~/.ssh/id_rsa
# REMOTE_TEST_DIR=/opt/ai-tests
