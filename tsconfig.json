{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["tests/**/*.ts"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dashboard",
    "drupal_theme",
    "MusicGPT",
    "Wan2GP",
    "stability-matrix",
    "comfyui",
    "alltalk_tts",
    "**/venv/**",
    "**/*_env/**"
  ]
}
