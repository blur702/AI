# Dashboard Backend Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to source control

# =============================================================================
# Required: Authentication Credentials
# =============================================================================
# These credentials are used for HTTP Basic Authentication on all API endpoints
# and for generating WebSocket session tokens
DASHBOARD_AUTH_USERNAME=your_username
DASHBOARD_AUTH_PASSWORD=your_secure_password

# Session token expiry time in hours
# Default: 24 hours
SESSION_EXPIRY_HOURS=24

# =============================================================================
# Optional: Reverse Proxy Authentication
# =============================================================================
# Enable token-based authentication for reverse proxy endpoints
# When enabled, clients must include "Authorization: Bearer <token>" header
PROXY_AUTH_ENABLED=false
PROXY_AUTH_TOKEN=

# =============================================================================
# Optional: Resource Limits
# =============================================================================
# Maximum request size for proxied requests (in bytes)
# Default: 104857600 (100MB)
MAX_PROXY_REQUEST_SIZE=104857600

# Timeout for proxied requests (in seconds)
# Default: 30
PROXY_TIMEOUT_SECONDS=30

# =============================================================================
# Optional: Test Mode
# =============================================================================
# Enable test-only endpoints for forcing service errors
# Only enable in development/testing environments
DASHBOARD_TEST_MODE=false
