{
  "type": "module",
  "dependencies": {
    "axios": "^1.8.3",
    "dotenv": "^16.4.5",
    "playwright": "^1.57.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.8.1",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.0.0",
    "prettier": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "globalDependencies": {
    "n8n": "installed globally via npm (npm install n8n -g)"
  },
  "scripts": {
    "install:browsers": "npx playwright install --with-deps",
    "install-n8n": "npm install n8n -g",
    "check-node": "node --version",
    "check-n8n": "n8n --version",
    "test": "npx playwright test --config=tests/config/playwright.config.ts",
    "test:headed": "npx playwright test --config=tests/config/playwright.config.ts --headed",
    "test:api": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/api",
    "test:ui": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/ui",
    "test:smoke": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/smoke",
    "test:debug": "PWDEBUG=1 npx playwright test --config=tests/config/playwright.config.ts",
    "test:ui-mode": "npx playwright test --config=tests/config/playwright.config.ts --ui",
    "test:report": "npx playwright show-report",
    "test:codegen": "npx playwright codegen --config=tests/config/playwright.config.ts",
    "test:services": "npx playwright test --config=tests/config/playwright.config.ts --grep \"@service=${SERVICE}\"",
    "test:parallel": "npx playwright test --config=tests/config/playwright.config.ts",
    "test:serial": "npx playwright test --config=tests/config/playwright.config.ts --workers=1",
    "test:chrome": "npx playwright test --config=tests/config/playwright.config.ts --project=chromium",
    "test:firefox": "npx playwright test --config=tests/config/playwright.config.ts --project=firefox",
    "test:webkit": "npx playwright test --config=tests/config/playwright.config.ts --project=webkit",
    "test:vps": "cross-env TEST_ENVIRONMENT=vps npx playwright test --config=tests/config/vps.config.ts",
    "test:vps:smoke": "cross-env TEST_ENVIRONMENT=vps npx playwright test --config=tests/config/vps.config.ts tests/tests/smoke",
    "test:vps:api": "cross-env TEST_ENVIRONMENT=vps npx playwright test --config=tests/config/vps.config.ts tests/tests/api",
    "test:vps:ui": "cross-env TEST_ENVIRONMENT=vps npx playwright test --config=tests/config/vps.config.ts tests/tests/ui",
    "test:react-spa": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa",
    "test:react-spa:auth": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa/auth",
    "test:react-spa:navigation": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa/navigation",
    "test:react-spa:congressional": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa/congressional",
    "test:react-spa:content": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa/content",
    "test:react-spa:password": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa/password-protection",
    "test:react-spa:admin": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa/admin",
    "test:react-spa:errors": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa/errors",
    "test:react-spa:integration": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa/integration",
    "test:react-spa:performance": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa/performance",
    "test:react-spa:headed": "npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa --headed",
    "test:react-spa:debug": "PWDEBUG=1 npx playwright test --config=tests/config/playwright.config.ts tests/tests/react-spa",
    "vps:setup": "npx ts-node tests/vps-runner.ts",
    "deploy:vps": "bash tests/scripts/deploy-to-vps.sh",
    "deploy:vps:win": "powershell -ExecutionPolicy Bypass -File tests/scripts/deploy-to-vps.ps1",
    "run:vps": "bash tests/scripts/run-vps-tests.sh",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "deploy:react-spa": "cd drupal_theme && npm run deploy:production",
    "deploy:react-spa:staging": "cd drupal_theme && npm run deploy:staging",
    "deploy:react-spa:dry-run": "cd drupal_theme && npm run deploy:dry-run",
    "deploy:react-spa:rollback": "python scripts/deploy_react_spa.py --rollback",
    "deploy:react-spa:list-backups": "python scripts/deploy_react_spa.py --list-backups"
  }
}
