<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Services Dashboard</title>
    <script src="https://cdn.socket.io/4.7.2/socket.io.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
            min-height: 100vh;
            padding: 40px 20px;
            color: #fff;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        h1 {
            text-align: center;
            font-size: 2.5rem;
            margin-bottom: 10px;
            background: linear-gradient(90deg, #00d4ff, #7b2cbf);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        .subtitle {
            text-align: center;
            color: #888;
            margin-bottom: 40px;
            font-size: 1.1rem;
        }
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 24px;
        }
        .card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 28px;
            transition: all 0.3s ease;
            text-decoration: none;
            color: inherit;
            display: block;
            position: relative;
        }
        .card:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(255, 255, 255, 0.2);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }
        .card.status-stopped {
            opacity: 0.7;
        }
        .card.status-starting {
            border-color: rgba(255, 193, 7, 0.5);
        }
        .card.status-running {
            border-color: rgba(0, 255, 136, 0.3);
        }
        .card-header {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-bottom: 16px;
        }
        .card-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }
        .card-title {
            font-size: 1.4rem;
            font-weight: 600;
        }
        .card-port {
            font-size: 0.85rem;
            color: #888;
            font-family: monospace;
        }
        .card-description {
            color: #aaa;
            line-height: 1.6;
            margin-bottom: 16px;
        }
        .card-features {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-bottom: 16px;
        }
        .tag {
            background: rgba(255, 255, 255, 0.1);
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            color: #ccc;
        }
        .status {
            display: inline-block;
            width: 8px;
            height: 8px;
            border-radius: 50%;
            margin-right: 8px;
        }
        .status-online {
            background: #00ff88;
            animation: pulse 2s infinite;
        }
        .status-offline {
            background: #666;
        }
        .status-starting-indicator {
            background: #ffc107;
            animation: pulse 0.5s infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        /* Card colors */
        .card-openwebui .card-icon { background: linear-gradient(135deg, #667eea, #764ba2); }
        .card-comfyui .card-icon { background: linear-gradient(135deg, #f093fb, #f5576c); }
        .card-alltalk .card-icon { background: linear-gradient(135deg, #4facfe, #00f2fe); }
        .card-ollama .card-icon { background: linear-gradient(135deg, #43e97b, #38f9d7); }
        .card-wan2gp .card-icon { background: linear-gradient(135deg, #ff6b6b, #feca57); }
        .card-n8n .card-icon { background: linear-gradient(135deg, #22c55e, #16a34a); }
        .card-yue .card-icon { background: linear-gradient(135deg, #a855f7, #ec4899); }
        .card-diffrhythm .card-icon { background: linear-gradient(135deg, #06b6d4, #3b82f6); }
        .card-musicgen .card-icon { background: linear-gradient(135deg, #f59e0b, #ef4444); }
        .card-stableaudio .card-icon { background: linear-gradient(135deg, #10b981, #059669); }

        .section-title {
            font-size: 1.5rem;
            margin: 40px 0 20px;
            padding-bottom: 10px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            color: #ccc;
        }

        .footer {
            text-align: center;
            margin-top: 50px;
            color: #666;
            font-size: 0.9rem;
        }
        .ip-info {
            text-align: center;
            margin-bottom: 30px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            font-family: monospace;
        }
        .ip-info span {
            color: #00d4ff;
        }

        /* Service action buttons */
        .card-actions {
            display: flex;
            gap: 10px;
            margin-top: 16px;
        }
        .btn {
            padding: 8px 16px;
            border-radius: 8px;
            border: none;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 6px;
        }
        .btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        .btn-start {
            background: linear-gradient(135deg, #00ff88, #00cc6a);
            color: #000;
        }
        .btn-start:hover:not(:disabled) {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(0, 255, 136, 0.4);
        }
        .btn-stop {
            background: linear-gradient(135deg, #ff4444, #cc0000);
            color: #fff;
        }
        .btn-stop:hover:not(:disabled) {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(255, 68, 68, 0.4);
        }
        .btn-open {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: #fff;
            flex: 1;
        }
        .btn-open:hover:not(:disabled) {
            transform: scale(1.05);
            box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        }

        /* Status message overlay */
        .status-message {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.9);
            padding: 20px 30px;
            border-radius: 12px;
            text-align: center;
            z-index: 10;
            display: none;
        }
        .status-message.visible {
            display: block;
        }
        .status-message .spinner {
            width: 30px;
            height: 30px;
            border: 3px solid rgba(255, 255, 255, 0.2);
            border-top-color: #00d4ff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 10px;
        }

        /* Connection status */
        .connection-status {
            position: fixed;
            bottom: 20px;
            right: 20px;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .connection-status.connected {
            background: rgba(0, 255, 136, 0.2);
            color: #00ff88;
        }
        .connection-status.disconnected {
            background: rgba(255, 68, 68, 0.2);
            color: #ff4444;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>AI Services Dashboard</h1>
        <p class="subtitle">Local AI Infrastructure - On-Demand Services</p>

        <div class="ip-info">
            Server IP: <span id="serverIp">10.0.0.138</span>
        </div>

        <div class="grid" id="mainServices">
            <!-- Services will be dynamically generated -->
        </div>

        <h2 class="section-title">Music Generation</h2>
        <div class="grid" id="musicServices">
            <!-- Music services will be dynamically generated -->
        </div>

        <div class="footer">
            <p>RTX 3090 (24GB) - Ryzen 9 5900X - 64GB RAM</p>
        </div>
    </div>

    <div class="connection-status disconnected" id="connectionStatus">
        <span class="status status-offline"></span>
        <span>Disconnected</span>
    </div>

    <script>
        // Service configuration matching backend
        const SERVICES_CONFIG = {
            openwebui: {
                name: "Open WebUI",
                port: 3000,
                icon: "\uD83D\uDCAC",
                description: "Chat interface for LLMs. Connect to Ollama models for conversations, code assistance, and more.",
                tags: ["Chat", "LLM", "Ollama"],
                cardClass: "card-openwebui",
                section: "main",
                external: true
            },
            comfyui: {
                name: "ComfyUI",
                port: 8188,
                icon: "\uD83C\uDFA8",
                description: "Node-based image generation with Stable Diffusion. Create images with advanced workflows.",
                tags: ["Image Gen", "Stable Diffusion", "Workflows"],
                cardClass: "card-comfyui",
                section: "main"
            },
            alltalk: {
                name: "AllTalk TTS",
                port: 7851,
                icon: "\uD83C\uDF99\uFE0F",
                description: "Text-to-speech with voice cloning. Create custom voices from audio samples using XTTS v2.",
                tags: ["TTS", "Voice Clone", "XTTS"],
                cardClass: "card-alltalk",
                section: "main"
            },
            ollama: {
                name: "Ollama API",
                port: 11434,
                icon: "\uD83E\uDD99",
                description: "REST API for running local LLMs. Backend for Open WebUI and other applications.",
                tags: ["API", "Qwen 32B", "Backend"],
                cardClass: "card-ollama",
                section: "main",
                external: true
            },
            wan2gp: {
                name: "Wan2GP Video",
                port: 7860,
                icon: "\uD83C\uDFAC",
                description: "AI video generation with Wan 2.1/2.2, LTX Video, Hunyuan Video, and Flux 2. Text-to-video and image-to-video.",
                tags: ["Video Gen", "Wan 2.1", "LTX Video"],
                cardClass: "card-wan2gp",
                section: "main"
            },
            n8n: {
                name: "N8N Workflows",
                port: 5678,
                icon: "n8n",
                description: "Visual workflow automation to orchestrate local AI tools, APIs, and webhooks.",
                tags: ["Automation", "Workflows", "Webhooks"],
                cardClass: "card-n8n",
                section: "main"
            },
            yue: {
                name: "YuE Music",
                port: 7870,
                icon: "\uD83C\uDFB5",
                description: "Full song generation with vocals from lyrics. Supports multiple languages and genres like EDM, pop, rock.",
                tags: ["Text-to-Music", "Vocals", "5 min songs"],
                cardClass: "card-yue",
                section: "music"
            },
            diffrhythm: {
                name: "DiffRhythm",
                port: 7871,
                icon: "\uD83C\uDFBC",
                description: "Fast full-song generation. Creates 4+ minute songs with vocals and instrumentals in ~10 seconds.",
                tags: ["Fast Gen", "Full Songs", "Diffusion"],
                cardClass: "card-diffrhythm",
                section: "music"
            },
            musicgen: {
                name: "MusicGen",
                port: 7872,
                icon: "\uD83C\uDFB9",
                description: "Meta's AudioCraft for high-quality instrumental music generation from text or melody prompts.",
                tags: ["Instrumental", "Meta AI", "Melody Input"],
                cardClass: "card-musicgen",
                section: "music"
            },
            stable_audio: {
                name: "Stable Audio",
                port: 7873,
                icon: "\uD83D\uDD0A",
                description: "Sound effects, drum beats, ambient sounds, and production elements. Up to 47 second audio clips.",
                tags: ["Sound FX", "Beats", "Ambient"],
                cardClass: "card-stableaudio",
                section: "music"
            }
        };

        // State management
        let serviceStatuses = {};
        let currentHost = window.location.hostname || '10.0.0.138';
        let socket = null;
        const API_BASE = `http://${currentHost}:5000`;

        // Initialize
        document.addEventListener('DOMContentLoaded', () => {
            if (currentHost && currentHost !== 'localhost' && currentHost !== '127.0.0.1') {
                document.getElementById('serverIp').textContent = currentHost;
            }
            renderServices();
            connectWebSocket();
            fetchAllStatuses();
        });

        // Render service cards
        function renderServices() {
            const mainGrid = document.getElementById('mainServices');
            const musicGrid = document.getElementById('musicServices');

            for (const [serviceId, config] of Object.entries(SERVICES_CONFIG)) {
                const card = createServiceCard(serviceId, config);
                if (config.section === 'music') {
                    musicGrid.appendChild(card);
                } else {
                    mainGrid.appendChild(card);
                }
            }
        }

        // Create a service card element
        function createServiceCard(serviceId, config) {
            const card = document.createElement('div');
            card.className = `card ${config.cardClass} status-stopped`;
            card.id = `card-${serviceId}`;
            card.innerHTML = `
                <div class="card-header">
                    <div class="card-icon">${config.icon}</div>
                    <div>
                        <div class="card-title">${config.name}</div>
                        <div class="card-port">
                            <span class="status status-offline" id="status-indicator-${serviceId}"></span>
                            Port ${config.port}
                        </div>
                    </div>
                </div>
                <p class="card-description">${config.description}</p>
                <div class="card-features">
                    ${config.tags.map(tag => `<span class="tag">${tag}</span>`).join('')}
                </div>
                <div class="card-actions">
                    ${config.external ? '' : `
                        <button class="btn btn-start" id="btn-start-${serviceId}" onclick="startService('${serviceId}')">
                            Start
                        </button>
                        <button class="btn btn-stop" id="btn-stop-${serviceId}" onclick="stopService('${serviceId}')" style="display:none;">
                            Stop
                        </button>
                    `}
                    <button class="btn btn-open" id="btn-open-${serviceId}" onclick="openService('${serviceId}')" disabled>
                        Open
                    </button>
                </div>
                <div class="status-message" id="status-msg-${serviceId}">
                    <div class="spinner"></div>
                    <div id="status-text-${serviceId}">Starting...</div>
                </div>
            `;
            return card;
        }

        // Connect to WebSocket for real-time updates
        function connectWebSocket() {
            socket = io(API_BASE, {
                transports: ['websocket', 'polling']
            });

            socket.on('connect', () => {
                console.log('WebSocket connected');
                updateConnectionStatus(true);
            });

            socket.on('disconnect', () => {
                console.log('WebSocket disconnected');
                updateConnectionStatus(false);
            });

            socket.on('service_status', (data) => {
                console.log('Service status update:', data);
                updateServiceUI(data.service_id, data.status, data.message);
            });
        }

        // Update connection status indicator
        function updateConnectionStatus(connected) {
            const statusEl = document.getElementById('connectionStatus');
            if (connected) {
                statusEl.className = 'connection-status connected';
                statusEl.innerHTML = '<span class="status status-online"></span><span>Connected</span>';
            } else {
                statusEl.className = 'connection-status disconnected';
                statusEl.innerHTML = '<span class="status status-offline"></span><span>Disconnected</span>';
            }
        }

        // Fetch all service statuses
        async function fetchAllStatuses() {
            try {
                const response = await fetch(`${API_BASE}/api/services`);
                const data = await response.json();

                for (const [serviceId, status] of Object.entries(data.services)) {
                    updateServiceUI(serviceId, status.status, '');
                }
            } catch (error) {
                console.error('Error fetching statuses:', error);
            }
        }

        // Update service UI based on status
        function updateServiceUI(serviceId, status, message) {
            const config = SERVICES_CONFIG[serviceId];
            if (!config) return;

            const card = document.getElementById(`card-${serviceId}`);
            const indicator = document.getElementById(`status-indicator-${serviceId}`);
            const startBtn = document.getElementById(`btn-start-${serviceId}`);
            const stopBtn = document.getElementById(`btn-stop-${serviceId}`);
            const openBtn = document.getElementById(`btn-open-${serviceId}`);
            const statusMsg = document.getElementById(`status-msg-${serviceId}`);
            const statusText = document.getElementById(`status-text-${serviceId}`);

            if (!card) return;

            // Remove all status classes
            card.classList.remove('status-stopped', 'status-starting', 'status-running');

            // Update based on status
            switch (status) {
                case 'stopped':
                    card.classList.add('status-stopped');
                    indicator.className = 'status status-offline';
                    if (startBtn) {
                        startBtn.style.display = 'inline-flex';
                        startBtn.disabled = false;
                    }
                    if (stopBtn) stopBtn.style.display = 'none';
                    openBtn.disabled = true;
                    statusMsg.classList.remove('visible');
                    break;

                case 'starting':
                    card.classList.add('status-starting');
                    indicator.className = 'status status-starting-indicator';
                    if (startBtn) {
                        startBtn.style.display = 'inline-flex';
                        startBtn.disabled = true;
                    }
                    if (stopBtn) stopBtn.style.display = 'none';
                    openBtn.disabled = true;
                    statusMsg.classList.add('visible');
                    statusText.textContent = message || 'Starting service...';
                    break;

                case 'running':
                    card.classList.add('status-running');
                    indicator.className = 'status status-online';
                    if (startBtn) startBtn.style.display = 'none';
                    if (stopBtn) {
                        stopBtn.style.display = 'inline-flex';
                        stopBtn.disabled = false;
                    }
                    openBtn.disabled = false;
                    statusMsg.classList.remove('visible');
                    break;

                case 'stopping':
                    card.classList.add('status-starting');
                    indicator.className = 'status status-starting-indicator';
                    if (startBtn) startBtn.disabled = true;
                    if (stopBtn) stopBtn.disabled = true;
                    openBtn.disabled = true;
                    statusMsg.classList.add('visible');
                    statusText.textContent = 'Stopping...';
                    break;

                case 'error':
                    card.classList.add('status-stopped');
                    indicator.className = 'status status-offline';
                    if (startBtn) {
                        startBtn.style.display = 'inline-flex';
                        startBtn.disabled = false;
                    }
                    if (stopBtn) stopBtn.style.display = 'none';
                    openBtn.disabled = true;
                    statusMsg.classList.add('visible');
                    statusText.textContent = message || 'Error';
                    setTimeout(() => statusMsg.classList.remove('visible'), 3000);
                    break;
            }

            serviceStatuses[serviceId] = status;
        }

        // Start a service
        async function startService(serviceId) {
            const startBtn = document.getElementById(`btn-start-${serviceId}`);
            if (startBtn) startBtn.disabled = true;

            updateServiceUI(serviceId, 'starting', 'Starting service...');

            try {
                const response = await fetch(`${API_BASE}/api/services/${serviceId}/start`, {
                    method: 'POST'
                });
                const data = await response.json();

                if (!data.success) {
                    updateServiceUI(serviceId, 'error', data.error || 'Failed to start');
                }
            } catch (error) {
                console.error('Error starting service:', error);
                updateServiceUI(serviceId, 'error', 'Connection error');
            }
        }

        // Stop a service
        async function stopService(serviceId) {
            const stopBtn = document.getElementById(`btn-stop-${serviceId}`);
            if (stopBtn) stopBtn.disabled = true;

            updateServiceUI(serviceId, 'stopping', 'Stopping service...');

            try {
                const response = await fetch(`${API_BASE}/api/services/${serviceId}/stop`, {
                    method: 'POST'
                });
                const data = await response.json();

                if (data.success) {
                    updateServiceUI(serviceId, 'stopped', '');
                } else {
                    updateServiceUI(serviceId, 'error', data.error || 'Failed to stop');
                }
            } catch (error) {
                console.error('Error stopping service:', error);
                updateServiceUI(serviceId, 'error', 'Connection error');
            }
        }

        // Open a service in new tab
        function openService(serviceId) {
            const config = SERVICES_CONFIG[serviceId];
            if (config && serviceStatuses[serviceId] === 'running') {
                window.open(`http://${currentHost}:${config.port}`, '_blank');
            }
        }
    </script>
</body>
</html>
