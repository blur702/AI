API_PORT=1301
LOG_LEVEL=INFO

# PostgreSQL Configuration (recommended for production)
# Either set DATABASE_URL directly or use individual POSTGRES_* settings
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_gateway
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ai_gateway
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ai_gateway
# CORS allowed origins - comma-separated list of trusted domains
# Development: Use localhost origins. Production: Replace with actual domains
# SECURITY: Never use '*' in production - it allows any origin (CSRF risk)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
# VRAM Manager script path (relative to project root or absolute)
# Can be overridden via command-line or environment variable
VRAM_MANAGER_PATH=./vram_manager.py

# Weaviate Vector Database
WEAVIATE_URL=http://localhost:8080
WEAVIATE_GRPC_HOST=localhost
WEAVIATE_GRPC_PORT=50051
OLLAMA_EMBEDDING_MODEL=snowflake-arctic-embed:l
