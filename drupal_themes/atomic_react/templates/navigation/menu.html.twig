{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %}
      <ul{{ attributes.addClass('primary-nav__list') }}>
    {% else %}
      <ul class="primary-nav__dropdown-list">
    {% endif %}
    {% for item in items %}
      {% set classes = [
        'primary-nav__item',
        item.is_expanded ? 'primary-nav__item--expanded',
        item.in_active_trail ? 'primary-nav__item--active',
      ] %}
      <li{{ item.attributes.addClass(classes) }}>
        {% if menu_level == 0 %}
          {% set link_classes = [
            'primary-nav__link',
            item.below ? 'primary-nav__link--has-children',
            item.in_active_trail ? 'primary-nav__link--active',
          ] %}
          <a href="{{ item.url }}" class="{{ link_classes|join(' ') }}"{% if item.below %} aria-expanded="false" aria-haspopup="true"{% endif %}{% if item.in_active_trail %} aria-current="page"{% endif %}>{{ item.title }}</a>
        {% else %}
          <a href="{{ item.url }}" class="primary-nav__dropdown-link"{% if item.in_active_trail %} aria-current="page"{% endif %}>{{ item.title }}</a>
        {% endif %}
        {% if item.below %}
          <div class="primary-nav__dropdown">{{ menus.menu_links(item.below, attributes, menu_level + 1) }}</div>
        {% endif %}
      </li>
    {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}
