{% if breadcrumb %}
  <nav class="breadcrumb" role="navigation" aria-label="{{ 'Breadcrumb'|t }}">
    <h2 class="sr-only">{{ 'Breadcrumb'|t }}</h2>
    <ol class="breadcrumb__list">
      {% for item in breadcrumb %}
        <li class="breadcrumb__item">
          {% if item.url %}
            <a href="{{ item.url }}" class="breadcrumb__link">{{ item.text }}</a>
          {% else %}
            <span class="breadcrumb__current" aria-current="page">{{ item.text }}</span>
          {% endif %}
        </li>
      {% endfor %}
    </ol>
  </nav>
{% endif %}
